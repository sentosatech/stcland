{
  "name": "@stcland/pg",
  "version": "0.0.8",
  "description": "Postgres DB utilities",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "STC"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/ramda": "^0.30.1",
    "eslint": "^8.57.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@eslint/js": "^9.8.0",
    "@stcland/errors": "workspace:^",
    "@stcland/spreadsheet-parser": "workspace:^",
    "@stcland/utils": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "path-exists": "^5.0.0",
    "postgres": "^3.4.7",
    "ramda": "^0.29.1",
    "ramda-adjunct": "^4.1.1",
    "typescript-eslint": "^7.18.0",
    "vitest": "^2.0.5"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "build": "pnpm run clean && tsup",
    "clean": "rimraf ./dist",
    "clean:all": "pnpm run clean && rimraf ./node_modules pnpm-lock.yaml",
    "test": "vitest --run",
    "test:loader": "vitest --run pgDataLoader.test.ts",
    "pg:up": "docker run -d --name postgres -p 5432:5432 -e POSTGRES_PASSWORD=pw postgres:17",
    "pg:down": "docker stop postgres && docker rm postgres",
    "pg:restart": "docker restart postgres",
    "pg:terminal": "docker exec -it postgres sh",
    "pg:shell": "docker exec -it postgres psql -U postgres -d testdb",
    "pg:clean": "docker stop postgres && docker rm postgres && docker volume rm postgres_data",
    "??postgres:logs": "docker logs -f postgres"
  }
}
